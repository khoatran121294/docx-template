<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Docx Template Generator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h3 class="title my-3">Generate DOCX from Template</h1>
        <form id="myForm" action="/generate" method="POST" enctype="multipart/form-data" class="row">
            <div class="col-4">
                <div class="mb-3">
                    <label class="form-label">Upload DOCX Template</label>
                    <input type="file" class="form-control" name="template" accept=".doc,.docx" required>
                </div>
                <button type="button" class="btn btn-danger" onclick="resetForm()">Reset</button>
                <button type="submit" class="btn btn-primary">Generate Document</button>
            </div>
            <div class="col-8">
                <div id="inputs" class="row"></div>
                <button type="button" class="btn btn-link px-0" onclick="onAdd1MoreField()">Need 1 more field?</button>
            </div>
        </form>
    </div>
    <script>
        let fieldCount = 0;
        onInit();

        function resetForm() {
            document.getElementById('myForm').reset();
            document.getElementById('inputs').innerHTML = '';
            onInit();
        }

        function onAdd1MoreField() {
            fieldCount++;

            const divBlock = document.createElement('div');
            divBlock.className = 'col-6 mb-3';

            const newInputLabel = document.createElement('label');
            newInputLabel.innerText = `Field #${fieldCount}`;
            newInputLabel.className = 'form-label';

            const newInput = document.createElement('textarea');
            newInput.type = 'text';
            newInput.className = 'form-control';
            newInput.name = 'field_' + fieldCount;

            divBlock.appendChild(newInputLabel);
            divBlock.appendChild(newInput);

            document.getElementById('inputs').appendChild(divBlock);
        }

        function onInit () {
            fieldCount = 0;
            for (let index = 0; index < 10; index++) {
                onAdd1MoreField();
            }
        }

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
